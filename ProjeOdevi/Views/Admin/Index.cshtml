@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kullanıcı</h5>
                <p class="card-text display-6">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Antrenör</h5>
                <p class="card-text display-6">@ViewBag.TotalTrainers</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hizmet</h5>
                <p class="card-text display-6">@ViewBag.TotalServices</p>
            </div>
        </div>
    </div>
</div>

<hr />

<h4>Randevu Durumları</h4>
<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Bekleyen
        <span class="badge bg-warning text-dark rounded-pill">@ViewBag.Pending</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Onaylanan
        <span class="badge bg-success rounded-pill">@ViewBag.Approved</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Reddedilen
        <span class="badge bg-danger rounded-pill">@ViewBag.Rejected</span>
    </li>
</ul>

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-outline-primary" asp-controller="ServiceTypes" asp-action="Index">Hizmetler</a>
    <a class="btn btn-outline-primary" asp-controller="Trainers" asp-action="Index">Antrenörler</a>
    <a class="btn btn-outline-primary" asp-controller="TrainerAvailabilities" asp-action="Index">Müsaitlikler</a>
    <a class="btn btn-outline-primary" asp-controller="Appointments" asp-action="Pending">Bekleyen Randevular</a>
</div>
