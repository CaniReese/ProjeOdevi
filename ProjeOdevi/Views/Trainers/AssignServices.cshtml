@using ProjeOdevi.Models
@{
    ViewData["Title"] = "Antrenöre Hizmet Ata";

    var all = ViewBag.AllServices as List<ServiceType> ?? new List<ServiceType>();
    var selected = ViewBag.SelectedIds as HashSet<int> ?? new HashSet<int>();
}

<h2>Antrenöre Hizmet Ata</h2>

<div class="mb-3">
    <strong>Antrenör:</strong> @ViewBag.TrainerName
</div>

<form asp-action="AssignServices" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="trainerId" value="@ViewBag.TrainerId" />

    <div class="mb-3">
        @foreach (var s in all)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="serviceTypeIds"
                       value="@s.Id"
                       @(selected.Contains(s.Id) ? "checked" : "") />
                <label class="form-check-label">
                    @s.Name (@s.DurationMinutes dk / @s.Price.ToString("0.00") TL)
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</form>
