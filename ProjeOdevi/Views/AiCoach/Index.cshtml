@{
    ViewData["Title"] = "AI Koç";
}

<h2>AI Koç (OpenAI)</h2>

<form method="post" class="mt-3">
    <div class="mb-2">
        <label class="form-label">Yaş</label>
        <input name="age" type="number" class="form-control" />
    </div>

    <div class="mb-2">
        <label class="form-label">Boy (cm)</label>
        <input name="heightCm" type="number" class="form-control" />
    </div>

    <div class="mb-2">
        <label class="form-label">Kilo (kg)</label>
        <input name="weightKg" type="number" class="form-control" />
    </div>

    <div class="mb-2">
        <label class="form-label">Hedef</label>
        <input name="goal" class="form-control" placeholder="Örn: kilo verme, kas kazanma..." />
    </div>

    <button class="btn btn-primary mt-2" type="submit">Plan Oluştur</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}

@if (ViewBag.Plan != null)
{
    <div class="alert alert-success mt-3" style="white-space:pre-wrap">@ViewBag.Plan</div>
}
